<!-- hamburger menu that shows up as a pop up modal are to Log Out -->



<div class="modal fade" id="hamburger" tabindex="-1" role="dialog" aria-labelledby="signupLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="hamburger">Menu</h4>
      </div>
	
	
	<div class="col-xs-12" ng-controller="cookieController as cookie">

		<% if logged_in? %>

			<button ng-click="cookie.remove()"><%= link_to "Logout", logout_path, method: "delete" %> </button>
		<% else %>

			<button data-toggle="modal" data-target="#login">Log in</button>
		<% end %>
		
	</div>
	
</nav>

<script type="text/javascript">
  // When doc loads
    $(function(){

      // jQuery for modal
      $("#hamburger").on('shown.bs.modal', function(){
        $(this).find("[autofocus]:first").focus();
      });


    });
</script>